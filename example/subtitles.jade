doctype html

html
	head
		style.
			body { width: 4000px }
			.heatmap { width: 100%; height: 6px; display: block; opacity: 0.4; }
			.heatmap.picked { opacity: 1; }
			.subs { margin: 0px 20px; overflow: hidden; }
			.point { float: left; height: 5px; width: 1px; }


	body
		for subs in subtitles
			div.subs(title=subs.id)
				//h4= subs.id
				.heatmap(class=subs.moviehash_pick ? "picked" : "")
					for point in subs.heatmap
						.point(style="background-color: #{subs.color || 'red'}; opacity: #{point/3}")